<body>
    <div class="main">
    <div class="first">
        <div class="marvel"></div>
    </div>
    <div class="character">
        <div class="div1">
            <div class="imgdiv">
                <img class="img" src="<%= character.thumbnail.path %>.jpg" alt="<%= character.name %>">
            </div>
        </div>
        <div class="div2">
            <div class="chnamee"><h1 class="nameone"><%= character.name %></h1></div>
            <div class="chades"><p class="desone"><%= character.description %></p></div>
        </div>
        
    </div>
    </div>
    
    
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/ScrollTrigger.min.js"></script>
<script>
    gsap.registerPlugin(ScrollTrigger);

    gsap.from(".marvel", {
        opacity: 1,
        y: -30,
        width:'10%',
        borderRadius:'45%',
    });

    gsap.from(".img", {
        scrollTrigger: {
            trigger: ".img",
            start: "top 100%",
            end: "top 10%",
            ease: 'slow(1, 1, false)',
            scrub: true,
        },
        opacity: 0,
        y: 130,
        borderRadius:'45%',
    });

    gsap.from(".nameone", {
        scrollTrigger: {
            trigger: ".nameone",
            start: "top 100%",
            end: "top 10%",
            ease: 'slow(1, 1, false)',
            scrub: true,
        },
        opacity: 0,
        y: -50,
    });

    gsap.from(".desone", {
        scrollTrigger: {
            trigger: ".desone",
            start: "top 100%",
            end: "top 10%",
            ease: 'slow(1, 1, false)',
            scrub: true,
        },
        opacity: 0,
        y: 50,
    });

